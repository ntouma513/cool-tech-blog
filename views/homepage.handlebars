<h1>Welcome to the Tech Blog!</h1>
{{#if logged_in}}
  <p>You are logged in! <a href="/dashboard">Go to your dashboard</a>.</p>
  <a href="/logout">Logout</a>
{{else}}
  <p><a href="/login">Log in</a> or <a href="/signup">Sign up</a> to start blogging!</p>
{{/if}}

{{#each posts}}
  <article>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p><small>Posted on {{this.date_created}}</small></p>
  </article>
{{else}}
  <p>No posts yet. Be the first to write one!</p>
{{/each}}
